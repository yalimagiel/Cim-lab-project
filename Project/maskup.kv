# Storeopen screen - Popup screen that shows the door opens so the costumer can enter the store
<Storeopen>:
    canvas.before:
        Color:
            rgba:1,1,1,1
    # global variables that connect to python
    body:body
    delet:delet
    bar:bar
    doorBar:doorBar
    doorOpen:doorOpen
    doorClose:doorClose
    Button: # Helper to poison the door in the middle of the store
        size:1,1
        background_color: 0,0,128,1
        pos:root.center_x,0
        id:helper
    Store:
        #Adjust the position of the item to the screen it operates
        size:root.center_x*1.1,root.center_y*1.8
        pos:helper.pos[0]/2.35,helper.pos[1]
        source:"hanot.jpg"
        id:body
    Door:
        size:body.size
        pos:body.pos
        id:delet
    DoorBar:
        size:body.size[0]/7,body.size[1]/20
        pos:body.pos[0]-self.size[0]/2+delet.size[0],body.pos[1]
        id:doorBar
    Bar:
        size:body.size[0],body.size[0]/6
        center_y:body.center_y+body.size[0]/12
        center_x:body.center_x-body.size[0]
        id:bar
    Limit:
        size:body.size[0]/20,body.size[1]/20
        pos:body.pos[0]-15,body.pos[1]
        id:doorOpen
    Limit:
        size:body.size[0]/20,body.size[0]/20
        pos:body.pos[0]+body.size[0]+5,body.pos[1]
        id:doorClose


