        Color:
            rgba: 1, 1, 1,1
        Rectangle:
            pos: self.pos
            size: self.size

# Storeclose screen - Popup screen that shows the door opens so the costumer can exit the store
<Storeclose>:
    canvas.before:
        Color:
            rgba:1,1,1,1
    # global variables that connect to python
    body:body
    delet:delet
    bar:bar
    doorBar:doorBar
    doorOpen:doorOpen
    doorClose:doorClose
    Button: # Helper to poison the door in the middle of the store
        size:1,1
        background_color: 0,0,128,1
        pos:root.center_x,0
        id:help
    Storec:
        #Adjust the position of the item to the screen it operates
        size:root.center_x*0.75,root.center_y*2
        pos:help.pos[0]/1.5,help.pos[1]
        source:"street.jpg"
        id:body
    Doorc:
        size:body.size
        pos:body.pos
        id:delet
    DoorBarc:
        size:body.size[0]/7,body.size[1]/20
        pos:body.pos[0]-self.size[0]/2+delet.size[0],body.pos[1]
        id:doorBar
    Bar:
        size:body.size[0],body.size[0]/6
        center_y:body.center_y+body.size[0]/12
        center_x:body.center_x-body.size[0]
        id:bar
    Limit:
        size:body.size[0]/20,body.size[1]/20
        pos:body.pos[0]-15,body.pos[1]
        id:doorOpen
    Limit:
        size:body.size[0]/20,body.size[0]/20
        pos:body.pos[0]+body.size[0]+5,body.pos[1]
        id:doorClose

# OutputForm screen - shows a form that the customer need to fill before exiting the store
<OutputForm>:
    #global variables that connecting to the python
	exitphone:phone
	orientation: "vertical" #vertical layout
	BoxLayout:
	    size_hint_y:0.4
	#four boxlayout that include: space in the beginning and ending of the row,and controls in the middle
	BoxLayout:
	    size_hint_y:0.2
	    Label:
	        text: 'Hope you had a good time'
	        font_size: 60
            font_name:'Gisha'
            color:0,0,128,1
	BoxLayout:
	    size_hint_y:0.2
	BoxLayout:
	    size_hint_y:0.2
	    Label:
	        text: 'Before you go please enter your phone number'
	        font_size: 50
            font_name:'Gisha'
            color:0,0,128,1
    BoxLayout:
	    size_hint_y:0.2
	BoxLayout:
        size_hint_y:0.3
		BoxLayout:
		    size_hint_x:0.2
		Label:
		    text:"Enter your phone number:"
		    font_size: 30
            font_name:'Gisha'
            color:0,0,128,1
        BoxLayout:
		    size_hint_x:0.2
	    TextInput: # Textbox to insert the phone number
			id: phone
			font_size: 40
            font_name:'Gisha'
		BoxLayout:
		    size_hint_x:0.2
		Button: # Done button - after the customer fill all details - it will insert to DB and moving to next screen
		    font_size: 40
            font_name:'Gisha'
            background_color: 0,0,128,0.3
		    text:"Done"
		    on_press:root.exitinsert() #connecting to exitinsert function in the python file
		BoxLayout:
	        size_hint_x: 0.3
	BoxLayout:
	    size_hint_y:0.2
    BoxLayout:
        size_hint_y:0.9
        Image:
            source: 'safe.png'
	BoxLayout:
	    size_hint_y:0.48
        size_hint_x:0.13
		Button: # Home button - return to home screen
		    background_color: 0,0,128,0.01
		    id:home
		    canvas:
                Rectangle:
                    size:100,100
                    source:'home4.png'
            on_press: root.home()#connecting to home function in the python file
        Button: # Back button - return to previous screen
			background_color: 0,0,128,0.01
		    canvas:
                Rectangle:
                    pos:home.size[0],0
                    size:100,100
                    source:'back.png'
			on_press: root.back()#connecting to back function in the python file




